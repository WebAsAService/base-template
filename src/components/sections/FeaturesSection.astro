<section id="features" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <!-- Section header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">What We Fix For Startups</h2>
