---
// Pricing section component for the landing page
import { Image } from 'astro:assets';
import bulletListSvg from '../../assets/bullet-list.svg';
import bulletListBlueSvg from '../../assets/bullet-list-blue.svg';
---

<section id="pricing" class="py-20 bg-primary-900">
  <div class="container mx-auto px-4">
    <!-- Section header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl md:text-5xl font-bold mb-4 text-secondary-500 font-heading">Which Crown Plan Fits Your Stage?</h2>
      <p class="text-xl text-white">
        From early scale to full finance ops, we've got the right mix of strategy and systems.
      </p>
    </div>
    
    <!-- Pricing toggle removed as requested -->
    
    <!-- Pricing cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <!-- Get Clean plan -->
      <div class="bg-primary-700 rounded-lg shadow-lg overflow-hidden transition-transform hover:scale-105">
        <div class="px-6 py-8 border-b border-accent-960/30">
          <h3 class="text-2xl font-bold  mb-2 text-white">Get Clean</h3>
          <div class="">
            <span class="text-4xl font-bold text-secondary-500">$5,000+</span>
            <span class="text-white font-medium">/month</span>
          </div>
          <p class=" text-white/80 mt-2">Best for startups post-raise with messy ops</p>
        </div>
        <div class="p-6">
          <ul class="space-y-4">
            <li class="flex items-start">
              <Image src={bulletListSvg} alt="Bullet" width={24} height={24} class="h-6 w-6 mr-2 flex-shrink-0" />
              <span class="text-white">Bookkeeping for startups</span>
            </li>
            <li class="flex items-start">
              <Image src={bulletListSvg} alt="Bullet" width={24} height={24} class="h-6 w-6 mr-2 flex-shrink-0" />
              <span class="text-white">Monthly close and reconciliations</span>
            </li>
            <li class="flex items-start">
              <Image src={bulletListSvg} alt="Bullet" width={24} height={24} class="h-6 w-6 mr-2 flex-shrink-0" />
              <span class="text-white">Accounting system implementation</span>
            </li>
            <li class="flex items-start">
              <Image src={bulletListSvg} alt="Bullet" width={24} height={24} class="h-6 w-6 mr-2 flex-shrink-0" />
              <span class="text-white">Balance sheet supporting schedules</span>
            </li>
            <li class="flex items-start">
              <Image src={bulletListSvg} alt="Bullet" width={24} height={24} class="h-6 w-6 mr-2 flex-shrink-0" />
              <span class="text-white">Onboarding in &lt;30 days</span>
            </li>
            <li class="flex items-start text-white/80">
              <Image src={bulletListBlueSvg} alt="Bullet" width={24} height={24} class="h-6 w-6 mr-2 flex-shrink-0 opacity-50" />
              <span>Fractional CFO strategy</span>
            </li>
            <li class="flex items-start text-white/80">
              <Image src={bulletListBlueSvg} alt="Bullet" width={24} height={24} class="h-6 w-6 mr-2 flex-shrink-0 opacity-50" />
              <span>Modeling or audit prep</span>
            </li>
          </ul>
          <a href="#contact" class="block text-center bg-secondary-500 hover:bg-secondary-600 text-primary-900 font-medium py-3 px-4 rounded-lg mt-8 transition-colors">
            Let's talk
          </a>
        </div>
      </div>
      
      <!-- Get Clarity Plan -->
      <div class="bg-primary-700 rounded-lg shadow-xl overflow-hidden transition-transform hover:scale-105 border-2 border-secondary-500 relative">
        <div class="absolute top-0 right-0 bg-secondary-500 text-primary-900 px-3 py-1 text-sm font-medium">Most Popular</div>
        <div class="px-6 py-8 border-b border-accent-960/30">
          <h3 class="text-2xl font-bold  mb-2 text-white">Get Clarity</h3>
          <div class="">
            <span class="text-4xl font-bold text-secondary-500">$12,000+</span>
            <span class="text-white font-medium">/month</span>
          </div>
          <p class=" text-white/80 mt-2">For teams prepping Series A/B or scaling fast</p>
        </div>
        <div class="p-6">
          <ul class="space-y-4">
            <li class="flex items-start">
              <Image src={bulletListSvg} alt="Bullet" width={24} height={24} class="h-6 w-6 mr-2 flex-shrink-0" />
              <span class="text-white">Everything in Get Clean</span>
            </li>
            <li class="flex items-start">
              <Image src={bulletListSvg} alt="Bullet" width={24} height={24} class="h-6 w-6 mr-2 flex-shrink-0" />
              <span class="text-white">Scenario planning & forecasting</span>
            </li>
            <li class="flex items-start">
              <Image src={bulletListSvg} alt="Bullet" width={24} height={24} class="h-6 w-6 mr-2 flex-shrink-0" />
              <span class="text-white">Cost optimization & vendor strategy</span>
            </li>
            <li class="flex items-start">
              <Image src={bulletListSvg} alt="Bullet" width={24} height={24} class="h-6 w-6 mr-2 flex-shrink-0" />
              <span class="text-white">HR/payroll coordination</span>
            </li>
            <li class="flex items-start">
              <Image src={bulletListSvg} alt="Bullet" width={24} height={24} class="h-6 w-6 mr-2 flex-shrink-0" />
              <span class="text-white">Systems & workflow automation</span>
            </li>
            <li class="flex items-start text-white/80">
              <Image src={bulletListBlueSvg} alt="Bullet" width={24} height={24} class="h-6 w-6 mr-2 flex-shrink-0 opacity-50" />
              <span>Dedicated CFO</span>
            </li>
          </ul>
          <a href="#contact" class="block text-center bg-secondary-500 hover:bg-secondary-600 text-primary-900 font-medium py-3 px-4 rounded-lg mt-8 transition-colors">
            Let's talk
          </a>
        </div>
      </div>
      
      <!-- Get Strategic Plan -->
      <div class="bg-primary-700 rounded-lg shadow-lg overflow-hidden transition-transform hover:scale-105">
        <div class="px-6 py-8 border-b border-accent-960/30">
          <h3 class="text-2xl font-bold  mb-2 text-white">Get Strategic</h3>
          <div class="">
            <span class="text-4xl font-bold text-secondary-500">$25,000+</span>
            <span class="text-white font-medium">/month</span>
          </div>
          <p class=" text-white/80 mt-2">For companies replacing in-house teams or prepping for raise/exit</p>
        </div>
        <div class="p-6 bg-accent-970">
          <ul class="space-y-4">
            <li class="flex items-start">
              <Image src={bulletListSvg} alt="Bullet" width={24} height={24} class="h-6 w-6 mr-2 flex-shrink-0" />
              <span class="text-white">Everything in Get Clarity</span>
            </li>
            <li class="flex items-start">
              <Image src={bulletListSvg} alt="Bullet" width={24} height={24} class="h-6 w-6 mr-2 flex-shrink-0" />
              <span class="text-white">Full finance, HR, and ops execution</span>
            </li>
            <li class="flex items-start">
              <Image src={bulletListSvg} alt="Bullet" width={24} height={24} class="h-6 w-6 mr-2 flex-shrink-0" />
              <span class="text-white">Dedicated CFO-level partner</span>
            </li>
            <li class="flex items-start">
              <Image src={bulletListSvg} alt="Bullet" width={24} height={24} class="h-6 w-6 mr-2 flex-shrink-0" />
              <span class="text-white">Fundraising & investor narrative support</span>
            </li>
            <li class="flex items-start">
              <Image src={bulletListSvg} alt="Bullet" width={24} height={24} class="h-6 w-6 mr-2 flex-shrink-0" />
              <span class="text-white">Audit & compliance prep</span>
            </li>
            <li class="flex items-start">
              <Image src={bulletListSvg} alt="Bullet" width={24} height={24} class="h-6 w-6 mr-2 flex-shrink-0" />
              <span class="text-white">Hiring & team planning support</span>
            </li>
          </ul>
          <a href="#contact" class="block text-center bg-secondary-500 hover:bg-secondary-600 text-primary-900 font-medium py-3 px-4 rounded-lg mt-8 transition-colors">
            Let's talk
          </a>
        </div>
      </div>
    </div>
    
    <div class="bg-primary-700 rounded-lg shadow-lg p-6 mt-12">
      <p class="text-center text-4xl text-secondary-500 mb-6 font-heading font-bold">Not sure which plan is right for you?</p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="https://calendly.com/crown-finance/discovery" target="_blank" class="inline-block bg-secondary-500 hover:bg-secondary-600 text-primary-900 font-medium py-3 px-6 rounded-lg transition-colors">
          Get a Scope
        </a>
        <a href="https://calendly.com/crown-finance/discovery" target="_blank" class="inline-block bg-secondary-500 hover:bg-secondary-600 text-primary-900 font-medium py-3 px-6 rounded-lg transition-colors">
          Get a FREE Financial Assessment
        </a>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const pricingToggle = document.getElementById('pricing-toggle') as HTMLInputElement;
    
    const prices = {
      monthly: {
        starter: '$3,500',
        pro: '$7,000',
        enterprise: '$14,000+'
      },
      annual: {
        starter: '$2,975',
        pro: '$5,950',
        enterprise: '$11,900+'
      }
    };
    
    if (pricingToggle) {
      pricingToggle.addEventListener('change', () => {
        const isAnnual = pricingToggle.checked;
        
        // Update prices
        const starterPriceEl = document.getElementById('starter-price');
        const proPriceEl = document.getElementById('pro-price');
        const enterprisePriceEl = document.getElementById('enterprise-price');
        
        // Update period text
        const starterPeriodEl = document.getElementById('starter-period');
        const proPeriodEl = document.getElementById('pro-period');
        const enterprisePeriodEl = document.getElementById('enterprise-period');
        
        if (starterPriceEl) starterPriceEl.textContent = isAnnual ? prices.annual.starter : prices.monthly.starter;
        if (proPriceEl) proPriceEl.textContent = isAnnual ? prices.annual.pro : prices.monthly.pro;
        if (enterprisePriceEl) enterprisePriceEl.textContent = isAnnual ? prices.annual.enterprise : prices.monthly.enterprise;
        
        if (starterPeriodEl) starterPeriodEl.textContent = isAnnual ? '/year' : '/month';
        if (proPeriodEl) proPeriodEl.textContent = isAnnual ? '/year' : '/month';
        if (enterprisePeriodEl) enterprisePeriodEl.textContent = isAnnual ? '/year' : '/month';
      });
    }
  });
</script>
