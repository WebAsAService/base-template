---
export interface Props {
  title?: string;
  services?: any[];
}

const { 
  title = "Our Services", 
  services = [] 
} = Astro.props;
---

<section id="services" class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <!-- Section header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">{title}</h2>
      <p class="text-xl text-gray-600">
        Comprehensive solutions tailored to your business needs
      </p>
    </div>
    
    <!-- Services grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service) => (
        <div class="bg-white p-8 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300">
          <h3 class="text-2xl font-bold mb-4">{service.name}</h3>
          <p class="text-gray-600 mb-6">{service.description}</p>
          
          {service.price && (
            <div class="text-2xl font-bold text-primary-600 mb-4">
              {service.price}
            </div>
          )}
          
          {service.features && service.features.length > 0 && (
            <ul class="list-disc list-inside text-sm text-gray-600 mb-6 space-y-1">
              {service.features.map((feature) => (
                <li>{feature}</li>
              ))}
            </ul>
          )}
          
          <a 
            href={service.ctaLink || '#contact'} 
            class="btn-primary block text-center w-full"
          >
            {service.cta || 'Learn More'}
          </a>
        </div>
      ))}
    </div>
  </div>
</section>