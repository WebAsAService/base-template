---
// Contact section component for the landing page
---

<section id="contact" class="py-20 bg-primary-900">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
    <!-- Section header -->
    <div class="text-center max-w-3xl mx-auto mb-8">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 text-secondary-500">Let's Fix the Financial Mess</h2>
      <p class="text-xl text-white mb-8">
        Reach out to ask a question, book a call, or kick off a scope review.
        We'll respond fast, no pressure, no fluff.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a href="#" class="inline-block bg-secondary-500 hover:bg-secondary-600 text-primary-900 font-semibold py-3 px-6 rounded-lg transition-colors">Schedule a Call</a>
        <a href="#" class="inline-block border-2 border-secondary-500 text-secondary-500 hover:bg-secondary-500 hover:text-primary-900 font-semibold py-3 px-6 rounded-lg transition-colors">Start a Scope Check</a>
      </div>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Contact form -->
      <div class="bg-primary-800 rounded-lg shadow-lg p-8">
        <h3 class="text-2xl font-bold mb-6 text-white">Get in Touch</h3>
        <form id="contact-form" class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block text-sm font-medium text-white mb-1">Full Name</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                placeholder="John Founder" 
                class="w-full px-4 py-2 bg-primary-700 border border-primary-600 text-white placeholder-white/60 rounded-md focus:outline-none focus:ring-2 focus:ring-secondary-500 focus:border-secondary-500" 
                required
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-white mb-1">Email Address</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                placeholder="founder@yourstartup.com" 
                class="w-full px-4 py-2 bg-primary-700 border border-primary-600 text-white placeholder-white/60 rounded-md focus:outline-none focus:ring-2 focus:ring-secondary-500 focus:border-secondary-500" 
                required
              />
            </div>
          </div>
          
          <div>
            <label for="subject" class="block text-sm font-medium text-white mb-1">Subject</label>
            <input 
              type="text" 
              id="subject" 
              name="subject" 
              placeholder="e.g. &quot;Need help with our close process&quot;" 
              class="w-full px-4 py-2 bg-primary-700 border border-primary-600 text-white placeholder-white/60 rounded-md focus:outline-none focus:ring-2 focus:ring-secondary-500 focus:border-secondary-500" 
              required
            />
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium text-white mb-1">Message</label>
            <textarea 
              id="message" 
              name="message" 
              rows="5" 
              placeholder="Tell us a bit about your stage, goals, or questions" 
              class="w-full px-4 py-2 bg-primary-700 border border-primary-600 text-white placeholder-white/60 rounded-md focus:outline-none focus:ring-2 focus:ring-secondary-500 focus:border-secondary-500" 
              required
            ></textarea>
          </div>
          
          <div class="flex items-start">
            <input 
              type="checkbox" 
              id="privacy" 
              name="privacy" 
              class="mt-1 h-4 w-4 text-secondary-500 bg-primary-700 border-primary-600 rounded focus:ring-secondary-500" 
              required
            />
            <label for="privacy" class="ml-2 text-sm text-white/80">
              I agree to the <a href="#" class="text-secondary-500 hover:underline">Privacy Policy</a> and consent to being contacted regarding my inquiry.
            </label>
          </div>
          
          <button type="submit" class="w-full bg-secondary-500 hover:bg-secondary-600 text-primary-900 font-semibold py-3 px-4 rounded-lg transition-colors">Send Message</button>
        </form>
      </div>
      
      <!-- Contact information -->
      <div class="flex flex-col justify-between">
        <!-- Info cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
          <!-- Email -->
          <div class="bg-primary-800 rounded-lg shadow-md p-6 flex items-start">
            <div class="bg-secondary-500/20 rounded-lg p-3 mr-4 flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-secondary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <div class="min-w-0 flex-1">
              <h4 class="text-lg font-semibold mb-1 text-white">Email Us</h4>
              <p class="text-white/80 mb-2">We're real people. You'll get a real reply.</p>
              <a href="mailto:hello@crownacquisitiongroup.com" class="text-secondary-500 hover:underline break-words">hello@crownacquisitiongroup.com</a>
            </div>
          </div>
          
          <!-- Visit -->
          <div class="bg-primary-800 rounded-lg shadow-md p-6 flex items-start">
            <div class="bg-secondary-500/20 rounded-lg p-3 mr-4 flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-secondary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <div class="min-w-0 flex-1">
              <h4 class="text-lg font-semibold mb-1 text-white">Visit Us</h4>
              <p class="text-white/80 mb-2">West Hollywood, CA</p>
              <p class="text-white/80">(Office visits by appointment)</p>
            </div>
          </div>
          
          <!-- Call -->
          <div class="bg-primary-800 rounded-lg shadow-md p-6 flex items-start">
            <div class="bg-secondary-500/20 rounded-lg p-3 mr-4 flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-secondary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
            </div>
            <div class="min-w-0 flex-1">
              <h4 class="text-lg font-semibold mb-1 text-white">Call Us</h4>
              <p class="text-white/80 mb-2">+1 (310) XXX-XXXX</p>
              <p class="text-white/80">Mon–Fri, 9 AM–5 PM PT</p>
            </div>
          </div>
          
          <!-- Support -->
          <div class="bg-primary-800 rounded-lg shadow-md p-6 flex items-start">
            <div class="bg-secondary-500/20 rounded-lg p-3 mr-4 flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-secondary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
              </svg>
            </div>
            <div class="min-w-0 flex-1">
              <h4 class="text-lg font-semibold mb-1 text-white">Support</h4>
              <p class="text-white/80 mb-2">For existing clients</p>
              <a href="mailto:support@crownacquisitiongroup.com" class="text-secondary-500 hover:underline break-words">support@crownacquisitiongroup.com</a>
            </div>
          </div>
        </div>
        
        <!-- Map -->
        <div class="bg-primary-800 rounded-lg shadow-lg overflow-hidden h-80">
          <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d26455.32366702443!2d-118.39673537431642!3d34.08961712916916!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x80c2b93cca9c7ab1%3A0x9b191d3aac3e37!2sWest%20Hollywood%2C%20CA!5e0!3m2!1sen!2sus!4v1687214567890!5m2!1sen!2sus" 
            width="100%" 
            height="100%" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy"
            title="Crown Acquisition Group Office Location"
          ></iframe>
        </div>
      </div>
    </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const contactForm = document.getElementById('contact-form') as HTMLFormElement;
    
    if (contactForm) {
      contactForm.addEventListener('submit', (e) => {
        e.preventDefault();
        
        // In a real application, you would send the form data to your server here
        // For this example, we'll just show a success message
        
        // Get form data
        const formData = new FormData(contactForm);
        const formValues = Object.fromEntries(formData.entries());
        
        // Log form data (for demonstration)
        console.log('Form submitted:', formValues);
        
        // Reset form
        contactForm.reset();
        
        // Show success message (in a real app, you'd handle this better)
        alert('Thank you for your interest in Crown! Our team will contact you within 24 hours to schedule your free consultation.');
      });
    }
  });
</script>
