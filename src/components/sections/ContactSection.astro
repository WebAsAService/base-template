---
// Contact section component for the landing page
---

<section id="contact" class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <!-- Section header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Ready to Transform Your Finances?</h2>
      <p class="text-xl text-gray-600">
        Schedule a free consultation with our financial experts to discuss how Crown can help your startup achieve financial clarity and strategic growth.
      </p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Contact form -->
      <div class="bg-white rounded-lg shadow-lg p-8">
        <h3 class="text-2xl font-bold mb-6">Schedule Your Free Consultation</h3>
        <form id="contact-form" class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                placeholder="John Doe" 
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500" 
                required
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                placeholder="john@example.com" 
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500" 
                required
              />
            </div>
          </div>
          
          <div>
            <label for="subject" class="block text-sm font-medium text-gray-700 mb-1">I'm interested in</label>
            <select 
              id="subject" 
              name="subject" 
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500" 
              required
            >
              <option value="" disabled selected>Select a service</option>
              <option value="Startup Accounting">Startup Accounting</option>
              <option value="Fractional CFO">Fractional CFO</option>
              <option value="Financial Modeling">Financial Modeling</option>
              <option value="Tax Planning">Tax Planning</option>
              <option value="Fundraising Support">Fundraising Support</option>
              <option value="Other">Other</option>
            </select>
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
            <textarea 
              id="message" 
              name="message" 
              rows="5" 
              placeholder="Your message here..." 
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500" 
              required
            ></textarea>
          </div>
          
          <div class="flex items-start">
            <input 
              type="checkbox" 
              id="privacy" 
              name="privacy" 
              class="mt-1 h-4 w-4 text-primary-600 border-gray-300 rounded focus:ring-primary-500" 
              required
            />
            <label for="privacy" class="ml-2 text-sm text-gray-600">
              I agree to the <a href="#" class="text-primary-500 hover:underline">Privacy Policy</a> and consent to being contacted regarding my inquiry.
            </label>
          </div>
          
          <button type="submit" class="btn btn-primary w-full">Schedule Consultation</button>
        </form>
      </div>
      
      <!-- Contact information -->
      <div class="flex flex-col justify-between">
        <!-- Info cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
          <!-- Email -->
          <div class="bg-white rounded-lg shadow-md p-6 flex items-start">
            <div class="bg-primary-100 rounded-lg p-3 mr-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <div>
              <h4 class="font-bold mb-1">Email Us</h4>
              <p class="text-gray-600 mb-2">Our financial experts are ready to assist.</p>
              <a href="mailto:contact@crownacquisition.com" class="text-primary-500 hover:underline">contact@crownacquisition.com</a>
            </div>
          </div>
          
          <!-- Phone -->
          <div class="bg-white rounded-lg shadow-md p-6 flex items-start">
            <div class="bg-primary-100 rounded-lg p-3 mr-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
            </div>
            <div>
              <h4 class="font-bold mb-1">Call Us</h4>
              <p class="text-gray-600 mb-2">Mon-Fri from 9am to 6pm ET.</p>
              <a href="tel:+18005551234" class="text-primary-500 hover:underline">+1 (800) 555-1234</a>
            </div>
          </div>
          
          <!-- Office -->
          <div class="bg-white rounded-lg shadow-md p-6 flex items-start">
            <div class="bg-primary-100 rounded-lg p-3 mr-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <div>
              <h4 class="font-bold mb-1">Visit Us</h4>
              <p class="text-gray-600 mb-2">Schedule an in-person consultation.</p>
              <address class="not-italic text-primary-500">
                350 Fifth Avenue, Suite 4200<br />
                New York, NY 10118
              </address>
            </div>
          </div>
          
          <!-- Support -->
          <div class="bg-white rounded-lg shadow-md p-6 flex items-start">
            <div class="bg-primary-100 rounded-lg p-3 mr-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
            </div>
            <div>
              <h4 class="font-bold mb-1">Client Portal</h4>
              <p class="text-gray-600 mb-2">Access your financial dashboard.</p>
              <a href="https://portal.crownacquisition.com" class="text-primary-500 hover:underline">Login to Client Portal</a>
            </div>
          </div>
        </div>
        
        <!-- Map -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden h-80">
          <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3022.604192265996!2d-73.98657492342224!3d40.74844097138558!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c259a9b30eac9f%3A0x4170c937da3f7195!2sEmpire%20State%20Building!5e0!3m2!1sen!2sus!4v1685500000000!5m2!1sen!2sus" 
            width="100%" 
            height="100%" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy"
          ></iframe>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const contactForm = document.getElementById('contact-form') as HTMLFormElement;
    
    if (contactForm) {
      contactForm.addEventListener('submit', (e) => {
        e.preventDefault();
        
        // In a real application, you would send the form data to your server here
        // For this example, we'll just show a success message
        
        // Get form data
        const formData = new FormData(contactForm);
        const formValues = Object.fromEntries(formData.entries());
        
        // Log form data (for demonstration)
        console.log('Form submitted:', formValues);
        
        // Reset form
        contactForm.reset();
        
        // Show success message (in a real app, you'd handle this better)
        alert('Thank you for your interest in Crown! Our team will contact you within 24 hours to schedule your free consultation.');
      });
    }
  });
</script>
