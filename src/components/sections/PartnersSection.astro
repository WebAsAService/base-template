      <!-- Two-column layout: Text on left, Logo grid on right -->
      <div class="flex flex-col lg:flex-row gap-12">
        <!-- Left column: Headline and copy -->
        <div class="lg:w-1/2">
          <h2 class="text-3xl md:text-4xl font-heading mb-6 text-secondary-500">
            Strategic Partners You Can Leverage
          </h2>
          <div class="space-y-4 text-lg text-primary-900">
            <p>
              Startup finance goes beyond numbers. Success often depends on the relationships you build and the support you have around you.
            </p>
            <p>
              When you work with Crown, you get both, our team and direct access to trusted partners across banking, credit, investor relations, legal, and go-to-market strategy.
            </p>
            <p>
              We've already built the network, now it works for you.
            </p>
          </div>
        </div>

        <!-- Right column: Logo grid -->
        <div class="lg:w-1/2">
          <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
            {
              partners.map((partner) => (
                <div class="bg-white rounded-lg p-4 flex items-center justify-center h-24 hover:shadow-md transition-all">
                  <img
                    src={partner.logo}
                    alt={partner.name}
                    class="max-h-16 max-w-full object-contain"
                    title={partner.name}
                  />
                </div>
              ))
            }
