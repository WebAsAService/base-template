---
import "../../../styles/animations.css";
---

<section id="partners" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16 animation-element fade-in-up">
        <h2 class="text-3xl md:text-4xl font-heading mb-4 text-primary-900">Our Partners</h2>
        <p class="text-xl text-secondary-700 max-w-3xl mx-auto">
          We work with industry-leading financial technology providers to deliver exceptional service
        </p>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8 stagger-animation">
        <!-- Partner 1 -->
        <div class="p-6 flex items-center justify-center animation-element fade-in-up">
          <div class="bg-gray-100 rounded-lg p-6 w-full h-32 flex items-center justify-center hover:shadow-md transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-auto text-primary-700" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
            </svg>
            <span class="ml-2 font-bold text-primary-900">QuickBooks</span>
          </div>
        </div>
        
        <!-- Partner 2 -->
        <div class="p-6 flex items-center justify-center animation-element fade-in-up">
          <div class="bg-gray-100 rounded-lg p-6 w-full h-32 flex items-center justify-center hover:shadow-md transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-auto text-primary-700" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
              <line x1="8" y1="21" x2="16" y2="21"></line>
              <line x1="12" y1="17" x2="12" y2="21"></line>
            </svg>
            <span class="ml-2 font-bold text-primary-900">Xero</span>
          </div>
        </div>
        
        <!-- Partner 3 -->
        <div class="p-6 flex items-center justify-center animation-element fade-in-up">
          <div class="bg-gray-100 rounded-lg p-6 w-full h-32 flex items-center justify-center hover:shadow-md transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-auto text-primary-700" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
              <circle cx="9" cy="7" r="4"></circle>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
            </svg>
            <span class="ml-2 font-bold text-primary-900">Gusto</span>
          </div>
        </div>
        
        <!-- Partner 4 -->
        <div class="p-6 flex items-center justify-center animation-element fade-in-up">
          <div class="bg-gray-100 rounded-lg p-6 w-full h-32 flex items-center justify-center hover:shadow-md transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-auto text-primary-700" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
              <polyline points="22 4 12 14.01 9 11.01"></polyline>
            </svg>
            <span class="ml-2 font-bold text-primary-900">Bill.com</span>
          </div>
        </div>
        
        <!-- Partner 5 -->
        <div class="p-6 flex items-center justify-center animation-element fade-in-up">
          <div class="bg-gray-100 rounded-lg p-6 w-full h-32 flex items-center justify-center hover:shadow-md transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-auto text-primary-700" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
              <line x1="3" y1="9" x2="21" y2="9"></line>
              <line x1="9" y1="21" x2="9" y2="9"></line>
            </svg>
            <span class="ml-2 font-bold text-primary-900">Expensify</span>
          </div>
        </div>
        
        <!-- Partner 6 -->
        <div class="p-6 flex items-center justify-center animation-element fade-in-up">
          <div class="bg-gray-100 rounded-lg p-6 w-full h-32 flex items-center justify-center hover:shadow-md transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-auto text-primary-700" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
              <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
              <line x1="12" y1="22.08" x2="12" y2="12"></line>
            </svg>
            <span class="ml-2 font-bold text-primary-900">Ramp</span>
          </div>
        </div>
        
        <!-- Partner 7 -->
        <div class="p-6 flex items-center justify-center animation-element fade-in-up">
          <div class="bg-gray-100 rounded-lg p-6 w-full h-32 flex items-center justify-center hover:shadow-md transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-auto text-primary-700" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
            <span class="ml-2 font-bold text-primary-900">Stripe</span>
          </div>
        </div>
        
        <!-- Partner 8 -->
        <div class="p-6 flex items-center justify-center animation-element fade-in-up">
          <div class="bg-gray-100 rounded-lg p-6 w-full h-32 flex items-center justify-center hover:shadow-md transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-auto text-primary-700" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
              <path d="M18 8h1a4 4 0 0 1 0 8h-1"></path>
              <path d="M2 8h16v9a4 4 0 0 1-4 4H6a4 4 0 0 1-4-4V8z"></path>
              <line x1="6" y1="1" x2="6" y2="4"></line>
              <line x1="10" y1="1" x2="10" y2="4"></line>
              <line x1="14" y1="1" x2="14" y2="4"></line>
            </svg>
            <span class="ml-2 font-bold text-primary-900">Brex</span>
          </div>
        </div>
      </div>
      
      <!-- Partner CTA -->
      <div class="text-center mt-16 animation-element fade-in-up">
        <div class="max-w-3xl mx-auto bg-primary-50 p-8 rounded-lg border border-primary-200">
          <h3 class="text-2xl font-heading mb-4 text-primary-900">Become a Partner</h3>
          <p class="text-secondary-700 mb-6">Interested in partnering with Crown to deliver exceptional financial services to startups? Let's discuss how we can work together.</p>
          <a href="#contact" class="btn bg-primary-600 hover:bg-primary-700 text-white px-8 py-3 rounded-md transition-all">Contact Us</a>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import { initAnimations } from "../../../scripts/animationObserver.js";
  initAnimations();
</script>
