import MicroProofElement from "./MicroProofElement.astro";
---

<section class="relative bg-gradient-to-b from-primary-950 to-primary-900 text-white py-20 md:py-32">
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0 bg-[url('/images/clients/crown/grid-pattern.svg')] bg-repeat opacity-20"></div>
  </div>
  
  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-8">
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-heading mb-6">
          <span class="text-accent-300">You raised. Great.</span><br/>
          <span>Now fix the financial mess.</span>
        </h1>
        
        <p class="text-xl md:text-2xl mb-8 text-secondary-300">
          We help Series Aâ€“B startups with CFO-level guidance, better systems, and longer runway.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="#features" class="btn bg-primary-700 hover:bg-primary-600 text-white px-8 py-3 rounded-md transition-all">
            See What We Fix
          </a>
          <a href="#contact" class="btn border border-secondary-500 hover:bg-secondary-700 text-white px-8 py-3 rounded-md transition-all">
            Schedule Consultation
          </a>
        </div>
        
