---
// This component demonstrates how the theme system can be used and customized for different clients
---

<div class="theme-demo">
  <div class="section">
    <h2 class="heading-2 mb-8 text-primary-700 border-b-4 border-primary-500 pb-2 inline-block">Theme Customization Demo</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Color Palette Card -->
      <div class="card">
        <div class="card-header">
          <h3 class="heading-3 text-xl">Color Palette</h3>
        </div>
        <div class="card-body">
          <div class="space-y-4">
            <!-- Primary Colors -->
            <div>
              <h4 class="font-medium mb-2">Primary Colors</h4>
              <div class="grid grid-cols-5 gap-2">
                <div class="h-8 bg-primary-50 rounded"></div>
                <div class="h-8 bg-primary-200 rounded"></div>
                <div class="h-8 bg-primary-400 rounded"></div>
                <div class="h-8 bg-primary-600 rounded"></div>
                <div class="h-8 bg-primary-800 rounded"></div>
              </div>
            </div>
            
            <!-- Secondary Colors -->
            <div>
              <h4 class="font-medium mb-2">Secondary Colors</h4>
              <div class="grid grid-cols-5 gap-2">
                <div class="h-8 bg-secondary-50 rounded"></div>
                <div class="h-8 bg-secondary-200 rounded"></div>
                <div class="h-8 bg-secondary-400 rounded"></div>
                <div class="h-8 bg-secondary-600 rounded"></div>
                <div class="h-8 bg-secondary-800 rounded"></div>
              </div>
            </div>
            
            <!-- Accent Colors -->
            <div>
              <h4 class="font-medium mb-2">Accent Colors</h4>
              <div class="grid grid-cols-5 gap-2">
                <div class="h-8 bg-accent-50 rounded"></div>
                <div class="h-8 bg-accent-200 rounded"></div>
                <div class="h-8 bg-accent-400 rounded"></div>
                <div class="h-8 bg-accent-600 rounded"></div>
                <div class="h-8 bg-accent-800 rounded"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Typography Card -->
      <div class="card">
        <div class="card-header">
          <h3 class="heading-3 text-xl">Typography</h3>
        </div>
        <div class="card-body">
          <div class="space-y-4">
            <div>
              <h4 class="font-medium mb-2">Headings</h4>
              <h1 class="text-2xl font-bold">Heading 1</h1>
              <h2 class="text-xl font-bold">Heading 2</h2>
              <h3 class="text-lg font-bold">Heading 3</h3>
            </div>
            
            <div>
              <h4 class="font-medium mb-2">Body Text</h4>
              <p class="paragraph">This is a paragraph of text that demonstrates the body text styling in our theme system.</p>
            </div>
            
            <div>
              <h4 class="font-medium mb-2">Font Families</h4>
              <p class="font-sans mb-1">Sans-serif font</p>
              <p class="font-serif mb-1">Serif font</p>
              <p class="font-mono">Monospace font</p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Components Card -->
      <div class="card">
        <div class="card-header">
          <h3 class="heading-3 text-xl">Components</h3>
        </div>
        <div class="card-body">
          <div class="space-y-6">
            <div>
              <h4 class="font-medium mb-2">Buttons</h4>
              <div class="flex flex-wrap gap-2">
                <button class="btn-primary">Primary</button>
                <button class="btn-secondary">Secondary</button>
                <button class="btn-accent">Accent</button>
                <button class="btn-outline">Outline</button>
              </div>
            </div>
            
            <div>
              <h4 class="font-medium mb-2">Cards</h4>
              <div class="border border-gray-200 rounded-lg p-3 bg-gray-50">
                <p class="text-sm">This is a sample card component</p>
              </div>
            </div>
            
            <div>
              <h4 class="font-medium mb-2">Form Elements</h4>
              <input type="text" placeholder="Input field" class="w-full px-3 py-2 border border-gray-300 rounded-md mb-2">
              <select class="w-full px-3 py-2 border border-gray-300 rounded-md">
                <option>Select option</option>
                <option>Option 1</option>
                <option>Option 2</option>
              </select>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .theme-demo {
    padding: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }
</style>
