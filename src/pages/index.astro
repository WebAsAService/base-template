---
import Layout from '@layouts/Layout.astro';
import Header from '@components/layout/Header.astro';
import Footer from '@components/layout/Footer.astro';
import HeroSection from '@components/clients/crown/HeroSection.astro';
import WhatWeFixSection from '@components/clients/crown/WhatWeFixSection.astro';
import AgitationSection from '@components/clients/crown/AgitationSection.astro';
import SocialProofSection from '@components/clients/crown/SocialProofSection.astro';
import HighlightedQuoteSection from '@components/clients/crown/HighlightedQuoteSection.astro';
import PricingSection from '@components/sections/PricingSection.astro';
import TestimonialsSection from '@components/sections/TestimonialsSection.astro';
import ContactSection from '@components/sections/ContactSection.astro';
import ToolsSection from '@components/sections/ToolsSection.astro';
import TeamSection from '@components/sections/TeamSection.astro';
import CompetitorsSection from '@components/sections/CompetitorsSection.astro';
import PartnersSection from '@components/clients/crown/PartnersSection.astro';
import FAQSection from '@components/sections/FAQSection.astro';
import ServicesSection from '@components/clients/crown/ServicesSection.astro';
import ValueComparisonSection from '@components/clients/crown/ValueComparisonSection.astro';

// Set Crown client theme - using custom Crown theme
const clientTheme = 'theme-crown';
---

<Layout title="Crown Acquisition Group - Financial Excellence for Growing Businesses" clientTheme={clientTheme}>
	<Header 
		logo="/images/clients/crown/logo-white-h.png"
		bgColor="bg-primary-950"
		textColor="text-secondary-300"
		hoverColor="text-accent-300"
		showFontsLink={false} />
	
	<main>
		<HeroSection />
		<WhatWeFixSection />
		<AgitationSection />
		<SocialProofSection />
		<HighlightedQuoteSection />
		<ServicesSection />
		<ValueComparisonSection />
		<PricingSection />
		<ToolsSection />
		<CompetitorsSection />
		<TeamSection />
		<!-- <TestimonialsSection /> -->
		<PartnersSection />
		<FAQSection />
		<ContactSection />
	</main>
	
	<Footer />
</Layout>

<style>
  /* Any Crown client-specific styles can go here */
</style>
