---
import Layout from "@layouts/Layout.astro";
import Header from "@components/layout/Header.astro";
import Footer from "@components/layout/Footer.astro";
import HeroSection from "@components/sections/HeroSection.astro";
import WhatWeFixSection from "@components/sections/WhatWeFixSection.astro";
import AgitationSection from "@components/sections/AgitationSection.astro";
import SocialProofSection from "@components/sections/SocialProofSection.astro";
import HighlightedQuoteSection from "@components/sections/HighlightedQuoteSection.astro";
import PricingSection from "@components/sections/PricingSection.astro";
import TestimonialsSection from "@components/sections/TestimonialsSection.astro";
import ContactSection from "@components/sections/ContactSection.astro";
import ToolsSection from "@components/sections/ToolsSection.astro";
import TeamSection from "@components/sections/TeamSection.astro";
import CompetitorsSection from "@components/sections/CompetitorsSection.astro";
import PartnersSection from "@components/sections/PartnersSection.astro";
import FAQSection from "@components/sections/FAQSection.astro";
import ServicesSection from "@components/sections/ServicesSection.astro";
import ValueComparisonSection from "@components/sections/ValueComparisonSection.astro";

// Set Crown client theme - using custom Crown theme
const clientTheme = "theme-crown-new";
---

<Layout
  title="Crown Acquisition Group - Financial Excellence for Growing Businesses"
  clientTheme={clientTheme}
>
  <Header
    logo="/images/clients/crown/crown.png"
    bgColor="bg-primary-800"
    textColor="text-secondary-400"
    hoverColor="text-secondary-700"
    showFontsLink={false}
  />

  <main>
    <HeroSection />
    <WhatWeFixSection />
    <AgitationSection />
    <HighlightedQuoteSection />
    <SocialProofSection />
    <ServicesSection />
    <ValueComparisonSection />
    <PricingSection />
    <CompetitorsSection />
    <ToolsSection />
    <!-- <TeamSection /> -->
    <!-- <TestimonialsSection /> -->
    <PartnersSection />
    <FAQSection />
    <ContactSection />
  </main>

  <Footer />
</Layout>

<style>
  /* Any Crown client-specific styles can go here */
</style>
