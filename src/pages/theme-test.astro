  <script>
    // Simple theme switcher
    document.addEventListener('DOMContentLoaded', () => {
      const themeButtons = document.querySelectorAll('.theme-button');
      const themeNameEl = document.getElementById('theme-name');
      
      // Get the current theme from URL or default to blue-ocean
      const urlParams = new URLSearchParams(window.location.search);
      const currentTheme = urlParams.get('theme') || 'blue-ocean';
      
      // Apply the current theme - ensure we're using the proper format
      const themeClass = currentTheme ? currentTheme : '';
      document.documentElement.className = themeClass;
      document.body.className = themeClass;
      
      // Update active button
      themeButtons.forEach((button: Element) => {
        // Type assertion for dataset property
        const buttonEl = button as HTMLElement;
        if (buttonEl.dataset.theme === currentTheme) {
          buttonEl.classList.add('active');
        } else {
          buttonEl.classList.remove('active');
        }
      });
      
      // Update theme name display with null check
      if (themeNameEl) {
        themeNameEl.textContent = currentTheme
          ? currentTheme.split('-').map((word: string) => word.charAt(0).toUpperCase() + word.slice(1)).join(' ')
          : 'Default';
      }
      
      // Add click event to theme buttons
      themeButtons.forEach((button: Element) => {
        const buttonEl = button as HTMLElement;
        buttonEl.addEventListener('click', () => {
          const theme = buttonEl.dataset.theme;
          
          // Apply theme immediately for better UX
          const themeClass = theme ? theme : '';
          document.documentElement.className = themeClass;
          document.body.className = themeClass;
          
          // Update URL without full page reload
          const newUrl = new URL(window.location.href);
          if (theme) {
            newUrl.searchParams.set('theme', theme);
          } else {
            newUrl.searchParams.delete('theme');
          }
          
          // Use history API to update URL without reload
          window.history.pushState({}, '', newUrl.toString());
          
          // Update active button state
          themeButtons.forEach((btn: Element) => {
            const btnEl = btn as HTMLElement;
            if (btnEl.dataset.theme === theme) {
              btnEl.classList.add('active');
            } else {
              btnEl.classList.remove('active');
            }
          });
          
          // Update theme name display
          if (themeNameEl) {
            themeNameEl.textContent = theme
              ? theme.split('-').map((word: string) => word.charAt(0).toUpperCase() + word.slice(1)).join(' ')
              : 'Default';
          }
        });
      });
      
      // Reset button
      const resetBtn = document.getElementById('reset-theme');
      if (resetBtn) {
        resetBtn.addEventListener('click', () => {
          // Remove theme class
          document.documentElement.className = '';
          document.body.className = '';
          
          // Update active button state
          themeButtons.forEach((btn: Element) => {
            const btnEl = btn as HTMLElement;
            btnEl.classList.remove('active');
          });
          
          // Update URL without full page reload
          const newUrl = new URL(window.location.href);
          newUrl.searchParams.delete('theme');
          window.history.pushState({}, '', newUrl.toString());
          
          // Update theme name display
          if (themeNameEl) {
            themeNameEl.textContent = 'Default';
          }
        });
      }
    });
  </script>
