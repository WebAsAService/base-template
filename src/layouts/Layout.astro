---
// Define props for the Layout component
interface Props {
  title?: string;
  description?: string;
  clientTheme?: string;
}

// Set default values for props
const { 
  title = "Astro Base Template",
  description = "A customizable base template for Astro projects",
  clientTheme = "" // Empty string means use default theme
} = Astro.props;

// Import global styles
import "../styles/global.css";
---

<!doctype html>
<html lang="en" class={clientTheme}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content={description} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<style>
			/* Ensure the theme class is applied to the entire document */
			body {
				min-height: 100vh;
			}
			
			/* Debug styles to verify theme changes */
			.theme-blue-ocean body::before,
			.theme-green-nature body::before,
			.theme-purple-elegance body::before,
			.theme-corporate-red body::before {
				content: attr(class);
				position: fixed;
				top: 5px;
				right: 5px;
				padding: 5px 10px;
				background: rgba(0,0,0,0.7);
				color: white;
				font-size: 12px;
				z-index: 9999;
			}
		</style>
	</head>
	<body class={clientTheme}>
		<slot />
	</body>
</html>
