    "test:all": "npm run test && npm run test:e2e"
  },
  "dependencies": {
    "astro": "^5.7.12",
    "sharp": "^0.33.5",
    "node-vibrant": "^3.2.1-alpha.1",
    "png-to-ico": "^2.1.8"
  },
  "devDependencies": {
    "@astrojs/tailwind": "^6.0.2",
    "@playwright/test": "^1.49.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.12.0",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.10.4",
    "jest": "^29.7.0",
    "jest-axe": "^9.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^12.2.2",
    "postcss": "^8.5.3",
    "puppeteer": "^24.0.0",
    "tailwindcss": "^3.0.24",
    "ts-jest": "^29.2.7",
    "typescript": "^5.7.3"
  }
